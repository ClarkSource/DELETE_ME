.form-group
  .control-label.col-sm-2
    = label_tag('Contact type:')
  .col-sm-10
    = select_tag('seo_snippet[contact_type]', options_for_select(['baggage_tracking', 'bill_payment', 'billing_support', 'credit_card_support', 'customer_support', 'emergency', 'package_tracking', 'reservations', 'roadside_assistance', 'technical_support', 'sales']), {prompt: 'Please select', class: 'form-control'})
.form-group
  .control-label.col-sm-2
    = label_tag('Telephone:')
  .col-sm-10
    = telephone_field(:seo_snippet, :telephone, placeholder: '+49-401-555-1212', class: 'form-control')
.form-group
  .control-label.col-sm-2
    = label_tag('Contact URL:')
  .col-sm-10
    = url_field(:seo_snippet, :contact_url, placeholder: 'https://domain/contact', class: 'form-control')
.form-group
  .control-label.col-sm-2
    = label_tag('Area served:')
  .col-sm-10
    = select_tag('seo_snippet[area_served]', options_for_select(CountryCodes.all_country_codes), {multiple: true, prompt: 'Please use command or ctrl/strl to add:', class: 'form-control'})
.form-group
  .control-label.col-sm-2
    = label_tag('Available language:')
  .col-sm-10
    = select_tag('seo_snippet[available_language]', options_for_select([['German','German'],['English','English'],['French','French'],['Spanish','Spanish'],['Dutch']]), {multiple: true, prompt: 'Please use command or ctrl/strl to add:', class: 'form-control'})
