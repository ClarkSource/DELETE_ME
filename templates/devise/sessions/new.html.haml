.row
  .col-md-6.col-md-offset-3
    = bootstrap_form_for resource, as: resource_name, url: session_path(resource_name), class: 'form-signin' do |f|
      = f.email_field :email, hide_label: true, placeholder: Admin.human_attribute_name(:email)
      = f.password_field :password, hide_label: true, placeholder: Admin.human_attribute_name(:password)
      = f.check_box :remember_me
      = f.submit t('devise.signin'), class: 'button btn btn-primary btn-block'
  .row.col-md-6.col-md-offset-3
    .pull-right
      = render 'devise/shared/links'
